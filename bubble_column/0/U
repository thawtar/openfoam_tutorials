FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (1 0 0);

boundaryField
{
    left
    {
        type            cyclic;
    }
    right
    {
        type            cyclic;
    }
    bottom
    {
        type            fixedValue;
        value			uniform (1 0 0);
    }
    top
    {
        type            fixedValue;
        value			uniform (1 0 0);
    }
    
    frontAndBack
    {
        type            empty;
    }
}


