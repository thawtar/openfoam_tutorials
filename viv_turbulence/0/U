FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
//              kg m s
dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    sides
    {
        type            symmetry;
        //type            fixedValue;
        //value           uniform (0 0 0);
    }
    inlet
    {
        type            fixedValue;
        value           uniform (1 0 0);
    }
    outlet
    {
        type            zeroGradient;
    }
    bottom
    {
        type            noSlip;
       // type            fixedValue;
       // value           uniform (0 0 0);
    }
    top
    {
        type            slip;
    }
    cylinder
    {
        type            movingWallVelocity;
        value           uniform (0 0 0);
    }
}


